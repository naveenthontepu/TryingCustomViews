<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thontepu.naveen.tryingcustomviews.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/text"/>
    <com.thontepu.naveen.tryingcustomviews.Views.BottomSheet
        android:layout_alignParentBottom="true"
        custom:showingElement="@layout/toplayout"
        custom:hiddenElement="@layout/bottomlayout"
        custom:shownElementSize = "160dp"
        custom:hiddenElementSize = "160dp"
        custom:animationDuration = "300"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
